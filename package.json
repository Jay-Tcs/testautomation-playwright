{
  "name": "testautomation-playwright",
  "version": "1.0.0",
  "description": "An advanced test automation framework using Playwright for both API and UI testing with the Page Object Model (POM) design pattern.",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:chrome": "npx playwright test --project=chrome",
    "test:firefox": "npx playwright test --project=firefox",
    "test:webkit": "npx playwright test --project=webkit",
    "test:smoke": "npx playwright test --grep @smoke",
    "test:regression": "npx playwright test --grep @regression",
    "test:smoke:chrome": "npx playwright test --grep @smoke --project=chrome",
    "test:regression:chrome": "npx playwright test --grep @regression --project=chrome",
    "test:smoke:firefox": "npx playwright test --grep @smoke --project=firefox",
    "test:regression:firefox": "npx playwright test --grep @regression --project=firefox",
    "test:smoke:webkit": "npx playwright test --grep @smoke --project=webkit",
    "test:regression:webkit": "npx playwright test --grep @regression --project=webkit",
    "test:ui:smoke:chrome": "npx playwright test --grep @ui --grep @smoke --project=chrome",
    "test:ui:regression:chrome": "npx playwright test --grep @ui --grep @regression --project=chrome",
    "test:api": "npx playwright test --grep @api --project=api",
    "test:api:smoke": "npx playwright test --grep @api --grep @smoke --project=api",
    "test:api:regression": "npx playwright test --grep @api --grep @regression --project=api",
    "test:ui:smoke": "npx playwright test --grep @smoke --project=chrome --project=firefox --project=webkit",
    "test:ui:regression": "npx playwright test --grep @regression --project=chrome --project=firefox --project=webkit",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "test:dev": "dotenv -e .env.development npx playwright test",
    "test:staging": "dotenv -e .env.staging npx playwright test",
    "test:prod": "dotenv -e .env.production npx playwright test"
  },
  "author": "Jay",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.2"
  }
}
